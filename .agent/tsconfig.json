    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "es2020",
            "dom"
        ],
        "types": [
            "node"
        ]
    },
    "include": [
        "**/*.ts"
    ]
}